{
  "$schema": "http://json-schema.org/draft-07/schema#",


  "type": "object",
  "properties": {
    "@content": {
      "type": "object",
      "patternProperties": {
        "^@target$": { "type": "string" },
        "^.*$": {
          "type": "object",
          "patternProperties": {
            "^.*$": { "$ref": "#/definitions/nsc-power" }
          }
        }
      }
    }
  },
  "required": [ "@content" ],


  "definitions": {
    "nsc-power": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": {
          "type": "string",
          "pattern": "^(Eigenschaft|Handlung, (freie Handlung|N|F|N\\|F|NN|NN\\|FF|NNN\\|FFF))(, Bande)?$"
        },
        "description": { "type": "string" },
        "target": {
          "type": [ "string", "null" ],
          "_enum": [
            "",
            "persönlich",
            "selbst",
            "1",
            "1-3",
            "1-5",
            "1 - 3",
            "alle Jäger",
            "alle Jäger (Bereich)",
            "Bereich",
            "Umgebung",
            "variabel",
            "beliebig"
          ]
        },
        "cost": {
          "type": [ "string", "null" ],
          "_pattern": "^(|keine|variabel|[0-9-]+( Hex)?( pro Ziel)?( pro Giftstufe)?( Lep)?)$"
        },
        "syntax": { "type": "string" },
        "references": {
          "$comment": "TODO: noch zu definieren",
          "type": "array"
        }
      },
      "additionalProperties": false,
      "required": [ "name", "type", "description", "syntax", "references" ],
      "allOf": [
        { "$ref": "#/definitions/type-requirements"}
      ]
    },

    "type-requirements": {
      "$comment": "Handlungen haben zusätzliche Pflichteigenschaften.",
      "if": { "properties": { "type": { "pattern": "^Handlung" } } },
      "then": { "required": [ "target", "cost" ] }
    }
  }
}