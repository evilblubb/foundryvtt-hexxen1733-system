{
  "$schema": "http://json-schema.org/draft-07/schema#",


  "allOf": [
    { "$ref": "global-schema.json#/definitions/root" },
    {
      "properties": {
        "@content": { "$ref": "#/definitions/content" }
      }
    }
  ],


  "definitions": {
    "content": {
      "$comment": "Die zulässigen Arten von Inhalt.",
      "anyOf": [
        { "$ref": "#/definitions/structure" },
        { "$ref": "#/definitions/default" },
        { "type": "array", "items": { "$ref": "#/definitions/default" } }
      ]
    },

    "structure": {
      "title": "Strukturebene",
      "$comment": "Die zulässigen/erforderlichen Strukturelemente. \"_id\" kann kein Strukturelement sein!",
      "type": "object",
      "patternProperties": {
        "^@map$": { "$ref": "global-schema.json#/definitions/@map" },
        "^@target$": { "$ref": "global-schema.json#/definitions/@target" },
        "^(?!_id).*$": { "$ref": "#/definitions/content" }
      },
        "anyOf": [
          { "required": [ "@map" ] },
          { "required": [ "@target" ] }
        ]
    },

    "default": {
      "$ref": "#/definitions/profession"
    },

    "profession": {
      "title": "Profession eines SC",
      "type": "object",
      "properties": {
        "name": { "$ref": "global-schema.json#/definitions/name" },
        "_id": { "$ref": "global-schema.json#/definitions/_id" },
        "@rev": { "$ref": "global-schema.json#/definitions/@rev" },
        "description": { "$ref": "global-schema.json#/definitions/description" },
        "summary": { "$ref": "global-schema.json#/definitions/summary", "$comment": "TODO: optional?" },
        "qualification": {
          "title": "Voraussetzung für die Profession",
          "description": "Voraussetzung, um die Profession erlernen zu können. \nTODO: genauer Syntax noch ausstehend.",
          "type": "string"
        },
        "type": {
          "title": "Art der Profession",
          "description": "(Optional) Handelt es sich um eine Meisterprofession? \nTODO: veraltet, durch \"masterprofession\": true ersetzen, sobald convert.js umgestellt",
          "type": "string",
          "const": "meisterprofession"
        },
        "masterprofession": {
          "title": "Meisterprofession",
          "description": "(Optional) true: Handelt es sich um eine Meisterprofession? false: Defaultwert, muss nicht gesetzt werden.",
          "type": "boolean"
        },
        "_@todo": { "$comment": "TODO: nur temporär"},
        "references": { "$ref": "global-schema.json#/definitions/references" }
      },
      "additionalProperties": false,
      "required": [ "name", "_id", "@rev", "description", "qualification", "references" ]
    }
  }
}