{
  "$schema": "http://json-schema.org/draft-07/schema#",


  "allOf": [
    { "$ref": "global-schema.json#/definitions/root" },
    {
      "properties": {
        "@content": { "$ref": "#/definitions/content" }
      }
    }
  ],


  "definitions": {
    "content": {
      "$comment": "Die zul채ssigen Arten von Inhalt.",
      "anyOf": [
        { "$ref": "#/definitions/structure" },
        { "$ref": "#/definitions/default" },
        { "type": "array", "items": { "$ref": "#/definitions/default" } }
      ]
    },

    "structure": {
      "$comment": "Die zul채ssigen/erforderlichen Strukturelemente. \"_id\" kann kein Strukturelement sein!",
      "type": "object",
      "patternProperties": {
        "^@map$": { "$ref": "global-schema.json#/definitions/@map" },
        "^(?!_id).*$": { "$ref": "#/definitions/content" }
      },
      "required": [ "@map" ]
    },

    "default": {
      "$ref": "#/definitions/regulation"
    },

    "regulation": {
      "title": "Regeltext",
      "description": "Ein textueller Regelausschnitt, der nicht von spezifischeren Elementen behandelt wird.",
      "type": "object",
      "properties": {
        "name": { "$ref": "global-schema.json#/definitions/name" },
        "_id": { "$ref": "global-schema.json#/definitions/_id" },
        "@rev": { "$ref": "global-schema.json#/definitions/@rev" },
        "description": { "$ref": "global-schema.json#/definitions/description" },
        "abbr": {
          "title": "Abk체rzung",
          "description": "Im Regelwerk verwendete Abk체rzung.",
          "type": "string"
        },
        "references": { "$ref": "global-schema.json#/definitions/references" }
      },
      "additionalProperties": false,
      "required": [ "name", "_id", "@rev", "description", "references" ]
    }
  }
}